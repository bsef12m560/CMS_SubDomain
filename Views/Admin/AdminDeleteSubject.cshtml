@{
    ViewBag.Title = "AdminDeleteSubject";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

@using AdeelAhmadSEM560.Models;

@*============Middle Div about Delete Students *@

<div class="col-sm-5" style="margin:0px; padding:0px">

    <div>
        <h3 style="font-family:Georgia; margin-left:8px; color:#a94442"><b>Delete Subject</b></h3>
    </div>

    <div class="panel panel-danger" style="margin:16px 8px 0px 8px">
 
        <table class="table">
            
            <tr style="background-color:#f2dede;">
                <td style="text-align:center; color:#a94442"><b>Subject Name</b></td>
                <td style="text-align:center; color:#a94442"><b>Subject Code</b></td>
                <td style="text-align:center; color:#a94442"><b>Operation</b></td>
            </tr>
    
            @foreach (AvailableSubject s in Model)
            {
                <tr>
                    <td style="text-align:center">@s.subjectName</td>
                    <td style="text-align:center">@s.subjectCode</td>
                    <td style="text-align:center">
                        <form action="/Admin/AdminDeleteSubjectNow/@s.subjectCode" onsubmit="return agree()">
                            <input type="submit" value="Delete" style="border:none; border-radius:3px; color:white;font-weight:600" class="btn-warning"/>
                        </form>                        
                    </td>
                </tr>
            }  

        </table>
    </div>

</div>

<script>

    function agree()
    {
        var x = confirm("Are you sure?");
        if (x == true)
            return true;
        else
            return false;
    }
    
</script>
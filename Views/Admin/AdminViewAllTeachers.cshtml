@{
    ViewBag.Title = "AdminViewAllTeachers";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

@using AdeelAhmadSEM560.Models;

@*============Middle Div about View All Students *@
        
<div class="col-sm-5" style="margin:0px; padding:0px">

    <div>
        <h3 style="font-family:Georgia; margin-left:8px; color:#a94442"><b>All Teachers</b></h3>
    </div>

    <div class="panel panel-danger" style="margin:16px 8px 0px 8px">
 
        <table class="table">
            
            <tr style="background-color:#f2dede">
                <td style="text-align:center; color:#a94442"><b>Teacher Name</b></td>
                <td style="text-align:center; color:#a94442"><b>Teacher ID</b></td>
                <td style="text-align:center; color:#a94442"><b>Subject</b></td>
            </tr>

            @foreach(User s in Model)
            {
                if(s.type != "admin" && s.type != "student")
                {
                    <tr>
                        <td style="text-align:center">@s.name</td>
                        <td style="text-align:center">@s.userId</td>

                    @foreach (AvailableSubject a in ViewBag.Subjects)
                    {
                        if(s.userId == a.teacherId)
                        {
                            <td style="text-align:center">@a.subjectName</td>
                            break;
                        }                       
                    }
                    </tr>            
                }
            }

        </table>
    </div>

</div>
@{
    ViewBag.Title = "TeacherAddQuizQuestions";
    Layout = "~/Views/Shared/_Teacher.cshtml";
}

@*============Middle Div about Add Quiz Questions*@

@using AdeelAhmadSEM560.Models;

<div class="col-sm-7" style="margin:0px; padding:0px">

    <div class="panel panel-info" style="margin:25px 8px 0px 8px">
                
        <div class="panel-heading">
            <span><b>Add Quiz</b></span>
        </div>
                
        <div class="panel-body">

            <form action="/Teachers/TeacherAddQuizNow/@Session["teacherId"]" class="form-horizontal" role="form">
               
                <div class="form-group">
                    <label class="control-label col-lg-3" for="quizNo">Quiz No: </label>
                    <div class="col-lg-3">
                        <input type="text" class="form-control" name="quizNo" value="@Session["QuizNo"]" disabled required />
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="control-label col-lg-3" for="quizNo">Total Questions: </label>
                    <div class="col-lg-3">
                        <input type="text" class="form-control" name="totalQuestions" placeholder="@Session["TotalQuestions"]" disabled required />
                    </div>
                    <label class="control-label col-lg-2" for="quizNo">Total Marks: </label>
                    <div class="col-lg-3">
                        <input type="text" class="form-control" name="totalMarks" placeholder="@Session["TotalMarks"]" disabled required />
                    </div>
                </div>
 @*                    
                <hr style="margin-left:5%; width:95%"/>

                <div class="form-group">
                    <label class="control-label col-lg-3" for="quizNo">Quiz No: @ViewBag.QuizNo</label>
                </div>
                
                <div class="form-group">
                    <label class="control-label col-lg-3" for="totalQuestions">Total Questions: @ViewBag.TotalQuestions</label>
                    <label class="control-label col-lg-3" for="totalMarks">Total Marks: @ViewBag.TotalMarks</label>
                </div>
                
                <div class="form-group">
                    <label class="control-label col-lg-3" for="quizNo">Quiz No: @Session["QuizNo"]</label>
                </div>
                
                <div class="form-group">
                    <label class="control-label col-lg-3" for="totalQuestions">Total Questions: @Session["TotalQuestions"]</label>
                    <label class="control-label col-lg-3" for="totalMarks">Total Marks: @Session["TotalMarks"]</label>
                </div>
*@
                <hr style="margin-left:5%; width:95%"/>

                @for (int i = 1; i <= Int32.Parse(Session["TotalQuestions"].ToString()); i++)
                {
                    String questionNo = "question" + i;
                    
                    <div class="form-group">
                        <label class="control-label col-lg-2" for="questions">Question @i:</label>
                        <div class="col-lg-10">
                            <textarea class="form-control" name="@questionNo" placeholder="Write your question here." required ></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-lg-2" for="optionA">Option A:</label>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" name="@("optionA"+ i)" placeholder="Enter Option A" required/>
                        </div>
                        
                        <label class="control-label col-lg-2" for="optionB">option B:</label>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" name="@("optionB"+ i)" placeholder="Enter Option B" required/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-lg-2" for="optionC" >option C:</label>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" name="@("optionC"+ i)" placeholder="Enter Option C"/>
                        </div>

                        <label class="control-label col-lg-2" for="optionD" >option D:</label>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" name="@("optionD"+ i)" placeholder="Enter Option D"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-lg-2 " for="correctOption" >Correct:</label>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" name="@("correctOption"+ i)" placeholder="Enter Correct Option"/>
                        </div>
                    </div>

                    <hr style="margin-left:5%; width:95%"/>
                }
                
                <div class="col-lg-12">
                    <input type="submit" value="Add Quiz" class="btn btn-danger col-lg-offset-4 col-sm-4" />
                </div>
            </form>
        </div>
    </div>
</div>
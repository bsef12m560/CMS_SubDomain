@{
    ViewBag.Title = "StudentWithdrawSubject";
    Layout = "~/Views/Shared/_Student.cshtml";
}

@using AdeelAhmadSEM560.Models;

@*============Middle Div about Withdraw Subject *@

<div class="col-sm-5" style="margin:0px; padding:0px">

    <div>
        <h3 style="font-family:Georgia; margin-left:8px; color:#3c763d"><b>Withdraw Subject</b></h3>
    </div>

    <div class="panel panel-success" style="margin:16px 8px 0px 8px">
 
        <table class="table">
            
            <tr style="background-color:#dff0d8">
                <td style="text-align:center; color:#3c763d"><b>Subject Name</b></td>
                <td style="text-align:center; color:#3c763d"><b>Subject Code</b></td>
                <td style="text-align:center; color:#3c763d"><b>Operation</b></td>
            </tr>
    
            @foreach (SelectedSubject s in Model)
            {
                foreach(AvailableSubject a in ViewBag.subjectNames)
                {
                    if(s.subjectCode == a.subjectCode)
                    {
                        <tr>
                            <td style="text-align:center; width:50%">@a.subjectName</td>
                            <td style="text-align:center">@s.subjectCode</td>
                            <td style="text-align:center">
                                <form action="/Students/StudentDropSubjectsNow/@s.subjectCode">
                                    <input type="submit" value="Withdraw" style="border:none; border-radius:3px; color:white;font-weight:600" class="btn-info"/>
                                </form>
                            </td>
                        </tr>                        
                    }
                }

            }

        </table>
    </div>

</div>
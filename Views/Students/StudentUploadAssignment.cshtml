@{
    ViewBag.Title = "StudentUploadAssignment";
    Layout = "~/Views/Shared/_Student.cshtml";
}

@*============Middle Div about Upload Assignment *@

@using AdeelAhmadSEM560.Models;

<div class="col-sm-5" style="margin:0px; padding:0px">

    <div class="panel panel-success" style="margin:25px 8px 0px 8px">
                
        <div class="panel-heading">
            <span><b>Upload Assignment</b></span>
        </div>

        <div class="panel-body">
            @{String no = @ViewBag.AssignmentNo;}
            @*<a href="@("/Students/StudentUploadAssignmentNow?assignmentNo=" +@no)">*@
            <form action="/Students/StudentUploadAssignmentNow/?assignmentNo=@no" method="post" enctype="multipart/form-data">
                <div class="form-group col-lg-12">
                    <label class="control-label col-lg-3" for="uploadFile">Upload File:</label>
                    <div class="col-lg-3">
                        <input type="file" name="assignment" required class="control-label"/>
                    </div>
                </div>

                <hr style="margin-left:5%; width:95%"/>

                <div class="col-lg-12">
                    <input type="submit" value="Submit" class="btn btn-danger col-lg-offset-4 col-sm-4" />
                </div>
            </form>
            @*</a>*@
        </div>
    </div>
</div>
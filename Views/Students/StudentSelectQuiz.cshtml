@model String
@{
    ViewBag.Title = "StudentSelectQuiz";
    Layout = "~/Views/Shared/_Student.cshtml";
}
@*============Middle Div about Add Quiz *@

@using AdeelAhmadSEM560.Models;

<div class="col-sm-5" style="margin:0px; padding:0px">

    <div class="panel panel-success" style="margin:25px 8px 0px 8px">
                
        <div class="panel-heading">
            <span><b>Select Quiz</b></span>
        </div>
                
        <div class="panel-body">

            <form action="/Students/StudentStartQuiz" class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="control-label col-lg-4" for="subjectName">Subject Name: </label>
                    <div>
                        <input type="text" class="form-control" name="quizNo" placeholder="@ViewBag.SubjectName" style="width:50%" disabled required />
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="control-label col-lg-4"   for="subjectName">Select Quiz: </label>
                    <select class="form-control" style="width:25%; margin-left:15px" name="quiz_No" required>
                        
                        @{
                            List<String> quizNO = new List<string>();
                            
                            foreach (String s in ViewBag.QuizNo)
                            {
                                foreach (Result r in ViewBag.result)                                   
                                {
                                 if (s == r.quizNo)
                                    {
                                        quizNO.Add(s);
                                    }
                                }
                            }

                            foreach (String s in ViewBag.QuizNo)
                            {
                                if(quizNO.Contains(s))
                                {
                                    <option disabled>@s</option>                            
                                }
                                else
                                {
                                    <option value="@s">@s</option>
                                }
                            }
                            
                        }
                    </select>
                </div>

                <hr style="margin-left:5%; width:95%"/>

                <div class="col-lg-12">
                    <input type="submit" value="Start Quiz" class="btn btn-danger col-lg-offset-4 col-sm-4" />
                </div>
            </form>
        </div>
    </div>
</div>
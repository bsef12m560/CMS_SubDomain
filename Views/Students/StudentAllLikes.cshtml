@{
    Layout = null;
}
@using AdeelAhmadSEM560.Models;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StudentAllLikes</title>

    <Link href="~/Content/bootstrap.css" rel="stylesheet">
    <Script src="~/Script/bootstrap.js"></Script>

</head>
<body>
    <div class="col-sm-4" style="margin-left:30%; margin-top:5%; padding:10px">
        <div class="panel panel-success" style="border-color:#003366">                
            <table class="table">
                <tr style="background-color:#dff0d8">
                    <td style="text-align:center; color:white"><b>Name</b></td>
                    <td style="text-align:center; color:white"><b>Date</b></td>
                </tr>
    
                @foreach(Like s in Model)
                {
                    <tr>
                        <td style="text-align:center">@s.name</td>
                        <td style="text-align:center">@s.date</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</body>
</html>
